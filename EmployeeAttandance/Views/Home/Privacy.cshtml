@{
    ViewData["Title"] = "Add Employee";
}
<h1>@ViewData["Title"]</h1>

<form method="post" id="personForm" >
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" placeholder="Enter Name" required><br />

        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Enter Email" required><br />

        <label for="mobile">Mobile</label>
        <input type="text" class="form-control" id="mobile" placeholder="Enter Mobile Number" minlength="10" maxlength="10" pattern="[0-9]+" required><br />

        <label for="Experience">Experience</label>
        <input type="number" class="form-control" id="Experience" placeholder="Enter Experience" required><br />

        <label for="DOJ">Date of Joining</label>
        <input type="text" class="form-control" id="DOJ" placeholder="Enter Date" required><br />

        <label for="department">Department</label>
        <select class="form-control" id="department">
        </select><br />

        <label for="post">Post</label>
        <select class="form-control" id="post">
        </select><br />
    </div>
    <button type="submit" class="btn btn-primary">
        Submit
    </button>
    <button type="reset" class="btn btn-danger">
        Reset
    </button>
</form>

<script src="~/js/addEmployee.js" asp-append-version="true"></script>